{
  "name": "lotto-api",
  "version": "1.0.0",
  "description": "Lotto Backend Api",
  "main": "./dist/index.js",
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "build": "tsc && npm run lint-dist-fix",
    "serve": "npm run build && node ./dist/index.js",
    "lint": "./node_modules/.bin/eslint ./src/**/*",
    "lint-fix": "./node_modules/.bin/eslint ./src/**/* --fix",
    "lint-dist": "./node_modules/.bin/eslint ./dist/**/*",
    "lint-dist-fix": "./node_modules/.bin/eslint ./dist/**/* --fix",
    "git": "git add . && git commit -m ",
    "postgit": "git push origin develop",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Api",
    "Hapi"
  ],
  "author": "Applogiq",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^9.1.2",
    "@hapi/hapi": "^20.0.0",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "bcrypt": "^5.0.1",
    "hapi-swagger": "^14.1.0",
    "hapijs-status-monitor": "^1.0.1",
    "joi": "^17.4.0",
    "mongoose": "^5.12.3"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/hapi": "^18.0.5",
    "@types/hapi__hapi": "^20.0.5",
    "@types/hapi__inert": "^5.2.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/hapi__vision": "^5.5.2",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tsc": "^1.20150623.0",
    "typescript": "^4.2.3"
  }
